<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".export.ExportActivity">

    <TextView
            android:text="@string/from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/editFromDate"
            app:layout_constraintBottom_toBottomOf="@+id/editFromDate"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editToDate"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editFromDate"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            android:editable="false"
            android:enabled="true"
            android:focusableInTouchMode="false"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editFromDate"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            android:editable="false"
            android:enabled="true"
            android:focusableInTouchMode="false"/>

    <TextView
            android:text="@string/to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/editToDate"
            app:layout_constraintBottom_toBottomOf="@+id/editToDate"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <Button
            android:text="@string/export"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnExport"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editToDate"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

</androidx.constraintlayout.widget.ConstraintLayout>